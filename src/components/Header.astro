---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/#services', label: 'Services' },
  { href: '/#ai', label: 'AI Integration' },
  { href: '/#why', label: 'Why Natred' },
  { href: '/about', label: 'About' },
];
---

<header class="header">
  <div class="header-accent-line"></div>
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo-container" aria-label="Natred Home">
        <!-- Logo Symbol -->
