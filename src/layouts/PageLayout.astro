---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactModal from '../components/ContactModal.astro';
import TestimonialModal from '../components/TestimonialModal.astro';
import ServiceModal from '../components/ServiceModal.astro';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
}

const { title, description, canonicalUrl } = Astro.props;
const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <Header currentPath={currentPath} />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
  <ContactModal />
  <TestimonialModal />
  <ServiceModal />
</BaseLayout>
